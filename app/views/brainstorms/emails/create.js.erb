<% if @email.errors.any? %>
  <% @email.errors.each do |error| %>
    <% if error.attribute == :email_address %>
      document.getElementById("error-field-email-address").innerHTML = "<%= j render "shared/validation_error", type: "email_address" %>"
    <% end %>
  <% end %>
<% else %>
  document.getElementById("emailModalContainer").classList.remove("flex")
  document.getElementById("emailModalContainer").classList.add("hidden")
  document.getElementById("notice").innerHTML = "<%= j render "shared/flash" %>"
  document.getElementById("notice-mobile").innerHTML = "<%= j render "shared/flash", phone: true %>"
  document.getElementById("email_address").value = "" 
<% end %>