<div id="modalContainer" class="flex flex-row hidden" x-data="{ 'showModal': false}">
  <!--Overlay-->
  <div class="flex flex-col" style="background-color: rgba(49, 39, 131, 0.9);" x-show="showModal" :class="{ 'fixed inset-0 z-50 flex items-center justify-center': showModal }">
    <!--Dialog-->
    <div class="bg-white w-11/12 lg:w-1/2 mx-auto shadow-lg lg:pt-3 lg:pb-8 pt-28 pb-16 text-left px-6" x-show="showModal">
      <!--Title-->
      <div class="flex justify-between">
        <div class="flex flex-col">
          <p class="lg:pb-8 pb-20 lg:text-4xl text-7xl font-bold text-blurple">LET US KNOW WHO YOU ARE</p>
          <p class="italic lg:text-base text-3xl font-bold leading-none uppercase lg:mb-1">What is your name?</p>
        </div>
      </div>
      <!-- content -->
      <%= form_with scope: :session, url: session_name_path(token: brainstorm.token), method: :patch do |form| %>
        <div class="field">
          <%= form.text_field :name, value: session.name, class: "w-full focus:outline-none border-solid border-2 border-black lg:h-12 h-32 italic font-bold px-4 my-shadow text-black text-5xl lg:text-xl" %>
        </div>
      <!--/Dialog -->
    </div>
    <div class="lg:mt-8 mt-12 flex flex-row justify-end w-11/12 lg:w-1/2 outline-none">
      <button type=submit class="hover:scale-105 ease-in-out duration-200 transform py-4 px-8 my-shadow-lg text-blurple lg:text-xl text-6xl font-bold bg-light-greeny cursor-pointer outline-none w-full lg:w-auto active:bg-light-greeny-darker focus:outline-none" @click="showModal = false">SET NAME!</button>
    </div>
    <% end %>
    <!-- /Overlay -->
  </div>
</div>
